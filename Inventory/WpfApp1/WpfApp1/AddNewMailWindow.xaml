<Window x:Class="WpfApp1.AddNewMailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddNewMailWindow" MaxHeight="175" MinHeight="175" MaxWidth="300" MinWidth="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="What is the new Mail ?" Margin="0,20,0,10"/>
            <TextBox x:Name="InputTextBox" Width="250" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="OK" Width="75" Margin="5" x:Name="OKBtn" Click="OKBtn_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" x:Name="CancelBtn" Click="CancelBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
