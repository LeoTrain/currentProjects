<Window x:Class="WpfApp1.AreYouShureAboutThat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AreYouShureAboutThat" MinHeight="120" MaxHeight="120" MinWidth="200" MaxWidth="200">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="center">
            <TextBlock Text="Are you shure about that?"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 20, 0, 0">
                <Button Content="Yes" Width="75" Margin="5" x:Name="YesBtn" Click="YesBtn_Click"/>
                <Button Content="No" Width="75" Margin="5" x:Name="NoBtn" Click="NoBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
